<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme using Material3 DayNight -->
    <style name="Base.Theme.Cryptify" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- 기본 색상 설정 -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 배경을 흰색으로 설정 -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- 상태 바를 투명하게 설정 -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- 기본 창 배경 -->
        <item name="android:windowBackground">@color/white</item>

        <!-- 상태 바 아이콘을 다크 모드로 설정 (라이트 테마에 맞춰서) -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <!-- 스피너 아이템 텍스트 색상 -->
        <item name="android:textColor">@color/black</item>
        <!-- 스피너 드롭다운 배경색 -->
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="Theme.Cryptify" parent="Base.Theme.Cryptify" />
</resources>
