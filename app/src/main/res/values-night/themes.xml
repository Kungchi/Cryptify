<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme using Material3 DayNight -->
    <style name="Base.Theme.Cryptify" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 다크 모드 앱바 및 UI 색상 설정 -->
        <item name="colorPrimary">@color/black</item>  <!-- 앱바 검은색 배경 -->
        <item name="colorOnPrimary">@color/white</item>  <!-- 앱바 아이콘 및 텍스트 흰색 -->

        <!-- 배경과 텍스트 색상 -->
        <item name="colorSurface">@color/white</item>  <!-- 다크 테마 기본 배경 -->
        <item name="colorOnSurface">@color/white</item>  <!-- 흰색 텍스트 -->

        <!-- 상태 바와 네비게이션 바를 검은색으로 설정 -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- 상태 바 아이콘을 밝게 설정 (다크 테마) -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <!-- 스피너 아이템 텍스트 색상 -->
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
